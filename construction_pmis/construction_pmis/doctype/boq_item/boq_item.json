{
    "name": "BOQ Item",
    "engine": "InnoDB",
    "module": "Construction PMIS",
    "owner": "Administrator",
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1,
            "submit": 1,
            "cancel": 1,
            "amend": 1
        },
        {
            "role": "Project Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1
        },
        {
            "role": "Quantity Surveyor",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1
        }
    ],
    "fields": [
        {
            "fieldname": "project",
            "fieldtype": "Link",
            "options": "Project",
            "label": "Project",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "task",
            "fieldtype": "Link",
            "options": "Task",
            "label": "Task (Optional - for linking to specific WBS/Task)"
        },
        {
            "fieldname": "item_code",
            "fieldtype": "Data",
            "label": "Item Code/No.",
            "reqd": 1,
            "in_list_view": 1,
            "unique": 0
        },
        {
            "fieldname": "item_description",
            "fieldtype": "Text Editor",
            "label": "Item Description",
            "reqd": 1
        },
        {
            "fieldname": "uom",
            "fieldtype": "Link",
            "options": "UOM",
            "label": "UOM",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "quantity",
            "fieldtype": "Float",
            "label": "Quantity",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "unit_rate",
            "fieldtype": "Currency",
            "label": "Unit Rate",
            "reqd": 1,
            "in_list_view": 1,
            "options": "Company:company:default_currency"
        },
        {
            "fieldname": "total_cost",
            "fieldtype": "Currency",
            "label": "Total Cost",
            "read_only": 1,
            "in_list_view": 1,
            "options": "Company:company:default_currency"
        },
        {
            "fieldname": "revision_number",
            "fieldtype": "Int",
            "label": "Revision Number",
            "default": "0",
            "read_only": 1
        },
        {
            "fieldname": "status",
            "fieldtype": "Select",
            "label": "Status",
            "options": "Draft\nApproved\nRevised\nObsolete",
            "default": "Draft"
        }
    ],
    "autoname": "field:item_code",
    "naming_rule": "By fieldname",
    "track_changes": 1,
    "title_field": "item_description"
}
